<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

	<TabHost
	    android:id="@+id/tabhost"
	    style="@style/tabpage"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="true" >
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="vertical" >
	
	        <TabWidget
	            android:id="@android:id/tabs"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content" >
	        </TabWidget>
	
	        <FrameLayout
	            android:id="@android:id/tabcontent"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent" >

	            <LinearLayout
	                android:id="@+id/easyTab"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent" 
	        		android:orientation="vertical" >

	                <TableLayout
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:paddingTop="5dp" >

	                    <TableRow
	                        android:id="@+id/tableRow1"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content" >

	                        <TextView
	                            android:id="@+id/textView2"
	                            style="@style/tablabel"
	                            android:text="@string/easy_q1_label" />

	                        <EditText
	                            android:id="@+id/editTextEasyDistanceBetweenLoops"
	                            android:layout_width="wrap_content"
	                            android:layout_height="wrap_content"
	                            android:ems="10"
	                            android:inputType="number"
	                            android:maxLength="4"
	                            android:width="@dimen/max_setting_textview_width" />

	                        <TextView
	                            android:id="@+id/textView3"
	                            android:layout_width="wrap_content"
	                            android:layout_height="wrap_content"
	                            android:text="@string/mmlabel"
	                            android:textAppearance="?android:attr/textAppearanceMedium" />
	                    </TableRow>

	                    <TableRow
	                        android:id="@+id/tableRow2"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content" >

	                        <TextView
	                            android:id="@+id/textView4"
	                            style="@style/tablabel"
	                            android:text="@string/easy_q2_label" />

	                        <EditText
	                            android:id="@+id/editTextEasyDistanceConversionFactor"
	                            android:layout_width="wrap_content"
	                            android:layout_height="wrap_content"
	                            android:ems="10"
	                            android:inputType="number"
	                            android:maxLength="7"
	                            android:width="@dimen/max_setting_textview_width" />

	                        <TextView
	                            android:id="@+id/textView5"
	                            android:layout_width="wrap_content"
	                            android:layout_height="wrap_content"
	                            android:text="@string/mmlabel"
	                            android:textAppearance="?android:attr/textAppearanceMedium" />
	                    </TableRow>

	                    <TableRow
	                        android:id="@+id/tableRow3"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content" >

	                        <TextView
	                            android:id="@+id/textView6"
	                            style="@style/tablabel"
	                            android:text="@string/easy_q3_label" />

	                        <EditText
	                            android:id="@+id/editTextEasyTimeConversion"
	                            android:layout_width="wrap_content"
	                            android:layout_height="wrap_content"
	                            android:ems="10"
	                            android:inputType="number"
	                            android:maxLength="5"
	                            android:width="@dimen/max_setting_textview_width" />

	                        <TextView
	                            android:id="@+id/textView7"
	                            android:layout_width="wrap_content"
	                            android:layout_height="wrap_content"
	                            android:text="@string/seclabel"
	                            android:textAppearance="?android:attr/textAppearanceMedium" />
	                    </TableRow>

	                    <TableRow
	                        android:id="@+id/tableRow4"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content" >

	                        <TextView
	                            android:id="@+id/textView8"
	                            style="@style/tablabel"
	                            android:text="@string/easy_q4_label" />

	                        <EditText
	                            android:id="@+id/editTextEasyCarScale"
	                            android:layout_width="wrap_content"
	                            android:layout_height="wrap_content"
	                            android:ems="10"
	                            android:inputType="number"
	                            android:maxLength="3"
	                            android:width="@dimen/max_setting_textview_width" />
	                    </TableRow>

	                    <TableRow
	                        android:id="@+id/tableRow5"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content" >

	                        <TextView
	                            android:id="@+id/textView9"
	                            style="@style/tablabel"
	                            android:text="@string/easy_q5_label" />

	                        <EditText
	                            android:id="@+id/editTextEasyBalldropTime"
	                            android:layout_width="wrap_content"
	                            android:layout_height="wrap_content"
	                            android:ems="10"
	                            android:inputType="number"
	                            android:maxLength="4"
	                            android:width="@dimen/max_setting_textview_width" />

	                        <TextView
	                            android:id="@+id/textView10"
	                            android:layout_width="wrap_content"
	                            android:layout_height="wrap_content"
	                            android:text="@string/milliseclabel"
	                            android:textAppearance="?android:attr/textAppearanceMedium" />
	                    </TableRow>

	                </TableLayout>

		            <RelativeLayout
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content" >
		                
		                <Button
		                    android:id="@+id/buttonEasySend"
		                    style="@style/sendbutton"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:layout_centerInParent="true" />
	
		            </RelativeLayout>
	            </LinearLayout>

	            <LinearLayout
	                android:id="@+id/hardTab"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent" 
	                android:orientation="vertical">

	                <TableLayout
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content"
	                    android:paddingTop="5dp" >

	                    <TableRow
	                        android:id="@+id/tableRow6"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content" >

	                        <TextView
	                            android:id="@+id/textView11"
	                            style="@style/tablabel"
	                            android:text="@string/hard_q1_label" />

	                        <EditText
	                            android:id="@+id/editTextHardDistanceBetweenLoops"
	                            android:layout_width="wrap_content"
	                            android:layout_height="wrap_content"
	                            android:ems="10"
	                            android:inputType="number"
	                            android:maxLength="4"
	                            android:width="@dimen/max_setting_textview_width" />

	                        <TextView
	                            android:id="@+id/textView12"
	                            android:layout_width="wrap_content"
	                            android:layout_height="wrap_content"
	                            android:text="@string/mmlabel"
	                            android:textAppearance="?android:attr/textAppearanceMedium" />
	                    </TableRow>

	                    <TableRow
	                        android:id="@+id/tableRow7"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content" >

	                        <TextView
	                            android:id="@+id/textView13"
	                            style="@style/tablabel"
	                            android:text="@string/hard_q2_label" />

	                        <EditText
	                            android:id="@+id/editTextHardCarScale"
	                            android:layout_width="wrap_content"
	                            android:layout_height="wrap_content"
	                            android:ems="10"
	                            android:inputType="number"
	                            android:maxLength="3"
	                            android:width="@dimen/max_setting_textview_width" />
	                    </TableRow>

	                    <TableRow
	                        android:id="@+id/tableRow8"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content" >

	                        <TextView
	                            android:id="@+id/textView15"
	                            style="@style/tablabel"
	                            android:text="@string/hard_q3_label" />

	                        <EditText
	                            android:id="@+id/editTextHardAccelerationGravity"
	                            android:layout_width="wrap_content"
	                            android:layout_height="wrap_content"
	                            android:ems="10"
	                            android:inputType="numberDecimal"
	                            android:maxLength="5"
	                            android:width="@dimen/max_setting_textview_width" />

	                        <TextView
	                            android:id="@+id/textView16"
	                            android:layout_width="wrap_content"
	                            android:layout_height="wrap_content"
	                            android:text="@string/metrespersecsquaredlabel"
	                            android:textAppearance="?android:attr/textAppearanceMedium" />
	                    </TableRow>

	                    <TableRow
	                        android:id="@+id/tableRow9"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content" >

	                        <TextView
	                            android:id="@+id/textView17"
	                            style="@style/tablabel"
	                            android:text="@string/hard_q4_label" />

	                        <EditText
	                            android:id="@+id/editTextHardBallDropTime"
	                            android:layout_width="wrap_content"
	                            android:layout_height="wrap_content"
	                            android:ems="10"
	                            android:inputType="number"
	                            android:maxLength="4"
	                            android:width="@dimen/max_setting_textview_width" />

	                        <TextView
	                            android:id="@+id/textView14"
	                            android:layout_width="wrap_content"
	                            android:layout_height="wrap_content"
	                            android:text="@string/milliseclabel"
	                            android:textAppearance="?android:attr/textAppearanceMedium" />
	                    </TableRow>

	                    <TableRow
	                        android:id="@+id/tableRow10"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content" >

	                        <TextView
	                            android:id="@+id/textView18"
	                            style="@style/tablabel"
	                            android:text="@string/hard_q5_label" />

	                        <EditText
	                            android:id="@+id/editTextHardCarAcceleration"
	                            android:layout_width="wrap_content"
	                            android:layout_height="wrap_content"
	                            android:ems="10"
	                            android:inputType="numberDecimal"
	                            android:maxLength="4"
	                            android:width="@dimen/max_setting_textview_width" />

	                        <TextView
	                            android:id="@+id/textView19"
	                            android:layout_width="wrap_content"
	                            android:layout_height="wrap_content"
	                            android:text="@string/metrespersecsquaredlabel"
	                            android:textAppearance="?android:attr/textAppearanceMedium" />
	                    </TableRow>

	                </TableLayout>

	                <RelativeLayout
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content" >
		                
		                <Button
		                    android:id="@+id/buttonHardSend"
		                    style="@style/sendbutton"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:layout_centerInParent="true" />
	
		            </RelativeLayout>
	                
	            </LinearLayout>

	            <LinearLayout
	                android:id="@+id/settingsTab"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent" 
	                android:orientation="vertical">

	                <TableLayout
	                    android:layout_width="match_parent"
	                    android:layout_height="wrap_content" >

	                    <TableRow
	                        android:id="@+id/tableRow11"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content" >

	                        <TextView
	                            android:id="@+id/textView1"
	                            style="@style/tablabel"
	                            android:text="@string/settings_q1_label" />

	                        <EditText
	                            android:id="@+id/editTextSettingsHost"
	                            android:inputType="text"
	                            android:layout_width="wrap_content"
	                            android:layout_height="wrap_content"
	                            android:ems="10"
	                            android:width="@dimen/max_setting_host_width" >

	                            <requestFocus />
	                        </EditText>
	                    </TableRow>

	                    <TableRow
	                        android:id="@+id/tableRow12"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content" >

	                        <TextView
	                            android:id="@+id/textView20"
	                            style="@style/tablabel"
	                            android:text="@string/settings_q2_label" />

	                        <EditText
	                            android:id="@+id/editTextSettingsPort"
	                            android:layout_width="wrap_content"
	                            android:layout_height="wrap_content"
	                            android:ems="10"
	                            android:inputType="number"
	                            android:width="@dimen/max_setting_textview_width" />
	                    </TableRow>

	                    <TableRow
	                        android:id="@+id/tableRow13"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content" >

	                        <TextView
	                            android:id="@+id/textView21"
	                            style="@style/tablabel"
	                            android:text="@string/settings_q3_label" />

	                        <EditText
	                            android:id="@+id/editTextSpeedDisplayOnTime"
	                            android:layout_width="wrap_content"
	                            android:layout_height="wrap_content"
	                            android:ems="10"
	                            android:inputType="number"
	                            android:width="@dimen/max_setting_textview_width" />

	                        <TextView
	                            android:id="@+id/textView22"
	                            android:layout_width="wrap_content"
	                            android:layout_height="wrap_content"
	                            android:text="@string/seclabel"
	                            android:textAppearance="?android:attr/textAppearanceMedium" />
	                    </TableRow>

	                    <TableRow
	                        android:id="@+id/tableRow14"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content" >

	                        <TextView
	                            android:id="@+id/textView23"
	                            style="@style/tablabel"
	                            android:text="@string/settings_q4_label" />

	                        <EditText
	                            android:id="@+id/editTextSimulationPauseTime"
	                            android:layout_width="wrap_content"
	                            android:layout_height="wrap_content"
	                            android:ems="10"
	                            android:inputType="numberDecimal"
	                            android:width="@dimen/max_setting_textview_width" />

	                        <TextView
	                            android:id="@+id/textView24"
	                            android:layout_width="wrap_content"
	                            android:layout_height="wrap_content"
	                            android:text="@string/seclabel"
	                            android:textAppearance="?android:attr/textAppearanceMedium" />
	                    </TableRow>

	                    <TableRow
	                        android:id="@+id/tableRow15"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content" >

	                        <TextView
	                            android:id="@+id/textView25"
	                            style="@style/tablabel"
	                            android:text="@string/settings_q5_label" />

	                        <EditText
	                            android:id="@+id/editTextSpeedLimitThreshold"
	                            android:layout_width="wrap_content"
	                            android:layout_height="wrap_content"
	                            android:ems="10"
	                            android:inputType="number"
	                            android:width="@dimen/max_setting_textview_width" />

	                        <TextView
	                            android:id="@+id/textView26"
	                            android:layout_width="wrap_content"
	                            android:layout_height="wrap_content"
	                            android:text="@string/mphlabel"
	                            android:textAppearance="?android:attr/textAppearanceMedium" />
	                    </TableRow>

	                </TableLayout>
	                
	                <RelativeLayout
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content" >
		                
		                <Button
		                    android:id="@+id/buttonSettingsSend"
		                    style="@style/sendbutton"
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:layout_centerInParent="true" />
	
		            </RelativeLayout>
	                
	            </LinearLayout>

	        </FrameLayout>

	    </LinearLayout>
	</TabHost>
</RelativeLayout>
